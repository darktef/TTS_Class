<p id="notice"><%= notice %></p>

<h1>Listing Blog Posts</h1>
    <div class="row">
      <% @blog_posts.each do |blog_post| %>
        <div class="col s12 m6">
          <div class="card green lighten-2">
            <div class="card-content white-text">
              <span class="card-title"><%= link_to blog_post.title, blog_post%></span>
              <i>by <%=blog_post.author%></i>
              <p><%= blog_post.blog_entry[0..250] %></p>
              <p><%= link_to '[Read More]', blog_post%></p>
            </div>
            <div class="card-action">
              <%= link_to 'Edit', edit_blog_post_path(blog_post) %>
              <%= link_to 'Destroy', blog_post, method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
          </div>
        </div>
      <% end %>
    </div>


<%= link_to 'New Blog post', new_blog_post_path %>