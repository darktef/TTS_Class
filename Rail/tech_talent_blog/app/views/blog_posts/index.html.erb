<p id="notice"><%= notice %></p>

<%= link_to 'New Blog post', new_blog_post_path, class: "right cyan lighten-3 waves-effect btn" %>

<h1>All Posts</h1>

  <div class="row">
    <% @blog_posts.each do |blog_post| %>
      <div class="col s12 m6">
        <div class="card green lighten-3">
          <div class="card-content white-text">
            <span class="card-title"><%= link_to blog_post.title, blog_post%></span>
            <i>by <%= blog_post.user.name %></i>
            <p>posted at: <%= blog_post.created_at.strftime("%m/%d/%Y %I:%M%p") %></p>
            <p class="blog-entry"><%= blog_post.blog_entry[0..250] %></p>
            <p><%= link_to '[Read More]', blog_post%></p>
          </div>
          <div class="card-action">
            <%= link_to 'Edit', edit_blog_post_path(blog_post), class: "waves-effect orange btn"%>
            <%= link_to "Destroy", blog_post, method: :delete, data: { confirm: 'Are you sure?'}, class: "waves-effect red btn" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>


