<p id="notice"><%= notice %></p>

<h1>Listing Imdbs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Actor</th>
      <th>Genre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @imdbs.each do |imdb| %>
      <tr>
        <td><%= imdb.title %></td>
        <td><%= imdb.actor_id %></td>
        <td><%= imdb.genre_id %></td>
        <td><%= link_to 'Show', imdb %></td>
        <td><%= link_to 'Edit', edit_imdb_path(imdb) %></td>
        <td><%= link_to 'Destroy', imdb, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

